<%= simple_form_for @play, html: {multipart: true} do |f| %>
    <%= f.select :category_id, @categories, prompt: "Select Category" %>
    <%= f.file_field :play_img %>
    <%= f.input :title, label: 'Play Title' %>
    <%= f.input :description %>
    <%= f.input :director %>
    <%= f.button :submit %>
<% end %>